generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id  Int @id @default(autoincrement()) 
  name String 
  description String
  completed Boolean
  createdAt DateTime? @default(now())
}
